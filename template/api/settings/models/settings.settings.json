{
  "kind": "singleType",
  "collectionName": "settings",
  "info": {
    "name": "settings",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "site_name": {
      "type": "string",
      "default": "nuxpresso",
      "required": true
    },
    "site_title": {
      "type": "string",
      "default": "Just a nuxpresso site"
    },
    "show_title": {
      "type": "boolean",
      "default": false
    },
    "footer": {
      "type": "text",
      "default": "nuxpresso - Created with NuxtJS / Strapi / Tailwindcss "
    },
    "logo_img": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "email": {
      "type": "string"
    },
    "github": {
      "type": "string"
    },
    "twitter": {
      "type": "string"
    },
    "articles_limit": {
      "default": 4,
      "type": "integer",
      "min": 2
    },
    "autoimage": {
      "type": "boolean",
      "default": true
    },
    "breadcrumb": {
      "type": "boolean",
      "default": true
    },
    "darkmode": {
      "type": "boolean",
      "default": true
    },
    "authentication": {
      "type": "boolean",
      "default": false
    },
    "read_more": {
      "type": "string",
      "default": "READ MORE"
    },
    "scrolltop": {
      "type": "boolean",
      "default": true
    }
  }
}
